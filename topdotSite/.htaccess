# Wordfence WAF
<IfModule LiteSpeed>
php_value auto_prepend_file '/home4/topdotca/public_html/wordfence-waf.php'
</IfModule>
<IfModule lsapi_module>
php_value auto_prepend_file '/home4/topdotca/public_html/wordfence-waf.php'
</IfModule>
<Files ".user.ini">
<IfModule mod_authz_core.c>
	Require all denied
</IfModule>
<IfModule !mod_authz_core.c>
	Order deny,allow
	Deny from all
</IfModule>
</Files>
# END Wordfence WAF

RewriteEngine On

# Check if the requested file exists with ".html" extension
# Rewrite the URL to add ".html" extension
RewriteCond %{REQUEST_FILENAME}\.html -f
RewriteRule ^(.+?)/?$ $1.html [L]

# php -- BEGIN cPanel-generated handler, do not edit
# Set the “ea-php82” package as the default “PHP” programming language.
<IfModule mime_module>
  AddHandler application/x-httpd-ea-php82___lsphp .php .php8 .phtml
</IfModule>
# php -- END cPanel-generated handler, do not edit

# Allow PHP in .html/.htm so we can use shared includes (header/footer)
# This keeps existing URLs (no renames to .php needed).
<IfModule mime_module>
  AddHandler application/x-httpd-ea-php82___lsphp .html .htm
</IfModule>

# Fallback for non-cPanel/local Apache setups (e.g., Laragon)
<IfModule mime_module>
  AddType application/x-httpd-php .html .htm
</IfModule>

# Stronger fallback: force PHP handler for .html/.htm
# (Needed on some Apache/PHP configurations where AddType/AddHandler is ignored for .html)
<FilesMatch "\.(html|htm)$">
  SetHandler application/x-httpd-php
</FilesMatch>

# Prevent HTML Caching
<IfModule mod_headers.c>
    <FilesMatch "\.(html|css)$">
        Header set Cache-Control "no-store, no-cache, must-revalidate, max-age=0"
        Header set Pragma "no-cache"
    </FilesMatch>
</IfModule>